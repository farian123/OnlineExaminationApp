@using System.Web.Mvc
@using System.Web.Mvc.Html
@model OnlineExamination.Models.Models.Organization

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Organizations", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Organization</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.OrganizationName, new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.OrganizationName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OrganizationName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OrganizationCode, new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.OrganizationCode, new { @class = "form-control", disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.OrganizationCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ContactNo, new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.ContactNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ContactNo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.About, new { @class = "control-label col-md-5" })
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.About, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.About)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-5">Logo</label>
            <div class="col-md-7">
                <input type="file" name="image1" id="image1" required />
                @*@Html.TextBoxFor(model => model.Logo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Logo)*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-11">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
<script src="~/Scripts/Organization/AutoCodeGenerate.js"></script>
}
