@using OnlineExamination.Models.Models
@model OnlineExamination.Models.Models.Organization

@{
    ViewBag.Title = "Details";
}

<div>
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Organization Information</div>
        <div class="panel-body">
            <div class="form-group row">
                <div class="col-md-5">
                    <img src="@Url.Content(Model.Logo)" width="200" height="200"/>
                </div>
                <div class="col-md-7 text-left">
                    <h2>@Html.DisplayFor(model => model.OrganizationName)</h2>
                    <p>@Html.DisplayFor(model => model.About)</p>
                </div>
            </div>
            <div class="table table-responsive">
                <table class="table table-bordered table-condensed table-hover table-striped ">
                    <thead>
                    <tr>
                        <td>Name</td>
                        <td>Code</td>
                        <td>Trainer</td>
                        <td>Participant</td>
                        <td>

                        </td>

                    </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Courses)
                        {
                            <tr>
                                
                                <td style="vertical-align:middle;">

                                    @Html.DisplayFor(modelItem => item.CourseName)
                                </td>
                                <td style="vertical-align:middle;">
                                    @Html.DisplayFor(modelItem => item.CourseCode)
                                </td>
                                <td style="vertical-align:middle;">
                                    @Html.DisplayFor(modelItem => item.CourseTrainers.Count)
                                </td>
                                <td style="vertical-align:middle;">
                                    @Html.DisplayFor(modelItem => item.CourseTrainers.Count)
                                </td>

                                <td style="vertical-align:middle;">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id })
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group row text-center">
                <p>@Html.DisplayFor(model => model.Address)</p>
                <p>@Html.DisplayFor(model => model.ContactNo)</p>
            </div>
        </div>

    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
