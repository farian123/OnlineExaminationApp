@model IEnumerable<OnlineExamination.Models.Models.Organization>

@{
    ViewBag.Title = "Index";
}
<p class="text-left">
    @Html.ActionLink("Create New", "Create")
</p>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="">Organizations</h3>
    </div>
    <p class="text-right">
        @Html.ActionLink("< Search", "Search")
    </p>
</div>
<hr />
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Logo)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.OrganizationName)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.OrganizationCode)
                </th>
                
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.ContactNo)
                </th>
                
                <th class="text-center">Option</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="vertical-align:middle;">
                        <img src="@Url.Content(item.Logo)" width="100" height="100" />
                    </td>
                    <td style="vertical-align:middle;">

                        @Html.DisplayFor(modelItem => item.OrganizationName)
                    </td>
                    <td style="vertical-align:middle;">
                        @Html.DisplayFor(modelItem => item.OrganizationCode)
                    </td>
                    
                    <td style="vertical-align:middle;">
                        @Html.DisplayFor(modelItem => item.ContactNo)
                    </td>
                    
                    <td style="vertical-align:middle;">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                </tr>
            }
        </tbody>

    </table>
</div>


