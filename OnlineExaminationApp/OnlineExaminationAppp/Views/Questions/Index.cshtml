@model IEnumerable<OnlineExamination.Models.Models.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Exam.ExamType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WriteQuestion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuestionOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OptionType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OptionNo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Exam.ExamType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WriteQuestion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionOrder)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OptionType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OptionNo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
