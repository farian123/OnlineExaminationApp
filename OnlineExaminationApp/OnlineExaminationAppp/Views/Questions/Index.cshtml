@model OnlineExaminationAppp.Models.QuestionViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-group row">
    <div class="col-mid-6">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-5" for="SubjectName">Organization</label>
                <div class="col-md-7">
                    @Html.DropDownListFor(x => x.OrganizationId, Model.OrganizationListItems, "--Select--", new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.OrganizationId)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-5" for="SubjectName">Course</label>
                <div class="col-md-7">
                    @Html.DropDownListFor(x => x.CourseId, Model.CourseListItems, "--Select--", new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.CourseId)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-5" for="SubjectName">Batch</label>
                <div class="col-md-7">
                    @Html.DropDownListFor(x => x.ExamId, Model.ExamListItems, "--Select--", new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.ExamId)
                </div>
            </div>

        </div>
        <hr/>
        <h3>Write Question</h3>
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-5" for="SubjectName">Question</label>
                <div class="col-md-7">
                    @Html.TextAreaFor(model => model.WriteQuestion, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.WriteQuestion)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-5" for="SubjectName">Mark</label>
                <div class="col-md-7">
                    @Html.TextBoxFor(model => model.Mark, new {@class = "form-control"})
                    @Html.ValidationMessageFor(model => model.Mark)
                </div>
            </div>
            @*<div class="form-group">
                <label class="control-label col-md-5" for="SubjectName">Q_Order</label>
                <div class="col-md-7">

                </div>
            </div>*@

        </div>
        <hr />
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-5" for="SubjectName">Option Type</label>
                <div class="col-md-7">
                    @Html.DropDownListFor(x => x.AnswerTypeId, Model.AnswerTypeListItems, "--Select--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AnswerTypeId)
                </div>
            </div>
        </div>

        <div id="PartialLoadAddingQuestionAnswer">
            
        </div>
        
    </div>
    <div class="col-mid-6">
        <div id="PartialLoadAllQuestionByExam">

        </div>
    </div>
    
</div>






@section Scripts {
    <script src="~/Scripts/Question/QuestionCascading.js"></script>
}
