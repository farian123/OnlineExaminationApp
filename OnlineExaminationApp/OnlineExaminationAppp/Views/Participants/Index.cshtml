@model IEnumerable<OnlineExamination.Models.Models.Participant>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="text-left">
    @Html.ActionLink("Create New", "CreateParticipantNormal")
</p>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="">Participants</h3>
    </div>
</div>
<hr />
<div class="table-responsive">
    <table class="table table-bordered" style="border-color: black">
        <tr style="background-color: #CFD6E5;">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Cities.CityName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ParticipantName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th class="text-center">
                @Html.DisplayNameFor(model => model.PostCode)
            </th>
           
            <th class="text-center">Option</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align: middle;">
                    <img src="@Url.Content(item.Image)" width="100" height="100" />
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Cities.CityName)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.ParticipantName)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.RegNo)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                
                <td style="vertical-align: middle;">
                    @Html.DisplayFor(modelItem => item.PostCode)
                </td>
                <td style="vertical-align: middle;">
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new {id = item.Id})
                </td>
            </tr>
        }

    </table>
</div>