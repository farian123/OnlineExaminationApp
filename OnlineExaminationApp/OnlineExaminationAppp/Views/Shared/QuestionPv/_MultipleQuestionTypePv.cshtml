@model OnlineExaminationAppp.Models.AddAnswerViewModel

@using (Ajax.BeginForm("SelectionAnswerForQuestion", "Questions", null, new AjaxOptions()
{
    HttpMethod = "POST",
    OnSuccess = "SelectionAnswerSuccess",
    OnFailure = "SelectionAnswerFailed"
}, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <h3>Option Add</h3>
        <hr />
        <div>
            <div class="form-group">
                <label class="control-label col-md-5" for="SubjectName">Currect<input type="checkbox" name="CurrectAnss" id="CurrectAnss" value="true" />&nbsp;</label>
                <div class="col-md-7 text-left">
                    @Html.TextBoxFor(model => model.AddedWrittenAnswer, new { placeholder = "Write Answer" })&nbsp;
                    <button type="submit" id="AddAnswerButton" class="btn btn-primary">+</button>&nbsp;
                </div>
            </div>
        </div>

    </div>
}
<hr />
<div id="AddedWrittenAnswerShowPv">

</div>



