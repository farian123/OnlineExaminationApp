@model IEnumerable<OnlineExaminationSystem.Models.Organization>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table table-bordered" style="border-color:black">
        <tr style="background-color: #CFD6E5;">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.OrganizationName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.OrganizationCode)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.About)
            </th>
            
            <th class="text-center">Option</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align:middle;">
                    <img src="@Url.Content(item.Logo)" width="100" height="100" />
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.OrganizationName)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.OrganizationCode)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.About)
                </td>
                
                <td style="vertical-align:middle;">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
            </tr>
        }
    </table>
</div>
