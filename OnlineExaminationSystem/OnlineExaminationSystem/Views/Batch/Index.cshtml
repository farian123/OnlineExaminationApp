@model IEnumerable<OnlineExaminationSystem.Models.Batch>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table table-bordered" style="border-color:black">
        <tr style="background-color: #CFD6E5;">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.BatchNo)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Course.CourseName)
            </th>
            
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Organization.OrganizationName)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="text-center">Option</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.BatchNo)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.Course.CourseName)
                </td>
                <td style="vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
               
                <td style="vertical-align:middle;">
                    @Html.DisplayNameFor(model => model.Organization.OrganizationName)
                </td>
                <td style="vertical-align:middle;">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>

